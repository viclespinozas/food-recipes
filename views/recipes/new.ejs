<% layout('layouts/boilerplate') %>
<h1>New Recipe!</h1>

<form action="/recipes" method="POST">
    <div class="form-group">
        <label for="recipeTitle">Title</label>
        <input type="text" name="title" id="recipeTitle" class="form-control" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="ingredients">Ingredients</label>
        <select class="form-control" name="ingredients" id="ingredients" multiple>
            <% ingredients.forEach(ingredient => { %>
                <option value="<%= ingredient.id %>"><%= ingredient.title %></option>
            <% }); %>
        </select>
    </div>
    <div class="form-group">
        <label for="preparation">Preparation</label>
        <textarea class="form-control" name="preparation" id="" cols="30" rows="10"></textarea>
    </div>
    <button type="submit" class="btn btn-primary"> Create </button>
</form>