<% layout('layouts/boilerplate') -%>
<h1>New Measurement!</h1>

<form action="/measurements" method="POST">
    <div class="form-group">
        <label for="codeName">Code Name</label>
        <input type="text" name="codeName" class="form-control" id="codeName" placeholder="grs">
    </div>
    <div class="form-group">
        <label for="displayName">Display Name</label>
        <input type="text" name="displayName" class="form-control" id="displayName" placeholder="Grams">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>