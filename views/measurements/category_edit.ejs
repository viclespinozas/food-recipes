<% layout('layouts/boilerplate') -%>
<h1>Editar Categor√≠a de Medidas</h1>

<form action="/measurements-categories/<%= measurementCategory.id %>?_method=PUT" method="POST">
    <div class="form-row">
        <div class="form-group col-6">
            <label for="ingredient">Nombre</label>
            <input type="text" name="ingredient" class="form-control" id="ingredient" value="<%= measurementCategory.ingredient %>">
        </div>
        <div class="form-group col-6">
            <label for="weight">Peso</label>
            <input type="number" name="weight" class="form-control" id="weight" value="<%= measurementCategory.weight %>">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>