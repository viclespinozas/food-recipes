<% layout('layouts/boilerplate') -%>
<h1>New Category Measurement!</h1>

<form action="/measurements-categories" method="POST">
    <div class="form-row">
        <div class="form-group col-6">
            <label for="ingredient">Title</label>
            <input type="text" name="ingredient" class="form-control" id="ingredient" placeholder="Title">
        </div>
        <div class="form-group col-6">
            <label for="weight">Weight</label>
            <input type="number" name="weight" class="form-control" id="weight" placeholder="Weight">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>