<% layout('layouts/boilerplate') -%>
<h1>Edit Measurement!</h1>

<form action="/measurements/<%= measurement.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="codeName">Code Name</label>
        <input type="text" name="codeName" class="form-control" id="codeName" value="<%= measurement.codeName %>">
    </div>
    <div class="form-group">
        <label for="displayName">Display Name</label>
        <input type="text" name="displayName" class="form-control" id="displayName" value="<%= measurement.displayName %>">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>